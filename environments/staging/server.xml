<!-- tag::serverxml[] -->
<server description="Sample Liberty server">

  <featureManager>
    <feature>appSecurity-5.0</feature>
    <feature>faces-4.0</feature>
    <feature>servlet-6.0</feature>
  </featureManager>

  <variable name="http.port" defaultValue="9080"/>
  <variable name="https.port" defaultValue="9443"/>

  <httpEndpoint id="defaultHttpEndpoint" host="*"
    httpPort="${http.port}"
    httpsPort="${https.port}" />

  <!-- tag::location[] -->
  <!--<include location="userRegistry.xml"/>-->
  <!-- end::location[]-->

  <application location="security-guide-11.war" type="war"
               id="guide-security-intro"
               name="guide-security-intro" context-root="/">
    <!-- tag::application-bnd[] -->
    <application-bnd>
      <!-- tag::Security[] -->
      <!-- tag::security-role-admin[] -->
      <security-role name="admin">
      <!-- end::security-role-admin[] -->
        <!-- tag::Group[] -->
        <!-- tag::group-name-Manager[] -->
        <group name="Manager" />
        <!-- end::group-name-Manager[] -->
        <!-- tag::group-name-TeamLead[] -->
        <group name="TeamLead" />
        <!-- end::group-name-TeamLead[] -->
        <!-- end::Group[] -->
      </security-role>
      <!-- tag::security-role-user[] -->
      <security-role name="user">
      <!-- end::security-role-user[] -->
        <!-- tag::group-name-Employee[] -->
        <group name="Employee" />
        <!-- end::group-name-Employee[] -->
      </security-role>
      <!-- end::Security[] -->
    </application-bnd>
     <!-- end::application-bnd[] -->
  </application>
  
  <basicRegistry id="basic" realm="WebRealm">
    <!-- tag::user-bob[] -->
    <user name="bob"
      password="{xor}PTA9Lyg7" /> <!-- bobpwd -->
    <!-- end::user-bob[] -->
    <!-- tag::user-alice[] -->
    <user name="alice"
      password="{xor}PjM2PDovKDs=" />  <!-- alicepwd -->
    <!-- end::user-alice[] -->
    <!-- tag::user-carl[] -->
    <user name="carl"
      password="{xor}PD4tMy8oOw==" />  <!-- carlpwd -->
    <!-- end::user-carl[] -->
    <!-- tag::user-dave[] -->
    <user name="dave"
      password="{xor}Oz4pOi8oOw==" />  <!-- davepwd -->
    <!-- end::user-dave[] -->

    <!-- tag::group-name-Manager[] -->
    <group name="Manager">
      <member name="bob" />
    </group>
    <!-- end::group-name-Manager[] -->

    <!-- tag::group-name-TeamLead[] -->
    <group name="TeamLead">
      <member name="carl" />
    </group>
    <!-- end::group-name-TeamLead[]-->
    
    <!-- tag::group-name-Employee[] -->
    <group name="Employee">
      <member name="alice" />
      <member name="bob" />
      <member name="carl" />
    </group>
    <!-- end::group-name-Employee[] -->

    <!-- tag::group-name-PartTime[] -->
    <group name="PartTime">
      <member name="dave" />
    </group>
    <!-- end::group-name-PartTime[] -->
  </basicRegistry>
</server>
<!-- end::serverxml[] -->
